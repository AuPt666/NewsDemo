<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_margin="10dp"
    app:cardCornerRadius="4dp"
    android:theme="@style/Theme.MaterialComponents.DayNight">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_alignParentLeft="true"
            android:src="@color/teal_200">
        </de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:id="@+id/homeItemWithImage_categoryTextView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="分类"
            android:textColor="@color/white"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/homeItemWithImage_srcTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/homeItemWithImage_categoryTextView"
            android:paddingBottom="15dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/homeItemWithImage_categoryTextView"
            android:text="来源:"
            android:textColor="@color/gray"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/homeItemWithImage_titleTextView"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/homeItemWithImage_categoryTextView"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="left"
            android:maxLines="2"
            android:text="标题"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/homeItemWithImage_contentTextView"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_below="@id/homeItemWithImage_titleTextView"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:text="正文正文正文正文正文正文正文正文"
            android:textSize="15sp"/>

        <ImageView
            android:id="@+id/homeItemWithImage_picImageView"
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:layout_alignTop="@id/homeItemWithImage_titleTextView"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@color/cardview_shadow_end_color" />

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>